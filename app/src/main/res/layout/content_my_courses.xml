<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_my_courses" tools:context="edu.ttu.cs.csta.quiz.menu.MyCoursesActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:background="#c3ec4848"
        android:layout_alignTop="@+id/my_courses_category_name"
        android:layout_alignStart="@+id/my_courses_category_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/quiz_menu_category_name"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/quiz_menu_category_name"
        android:id="@+id/quiz_menu_category_description" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY COURSES"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/quiz_menu_category_description"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView2"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="28dp"
        android:nestedScrollingEnabled="true" />

</RelativeLayout>