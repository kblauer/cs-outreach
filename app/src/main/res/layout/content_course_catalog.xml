<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/homepage_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_course_catalog"
    tools:context="com.example.ajeyadav.cstutorialapplication.CourseCatalogActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:weightSum="1">

        <TextView
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:text="Select a programming Language"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/textView"
            android:layout_weight="0.09" />

        <Button
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:text="Python"
            android:id="@+id/button_lang_python"
            android:background="#FFA500"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight="0.08"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:text="C"
            android:id="@+id/button_lang_c"
            android:textAlignment="center"
            android:layout_weight="0.08"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:text="C++"
            android:id="@+id/button_lang_cplusplus"
            android:background="#FFA500"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight="0.08"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:text="Java"
            android:id="@+id/button_lang_java"
            android:textAlignment="center"
            android:layout_weight="0.08"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

        <Button
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:text="C#"
            android:id="@+id/button_lang_csharp"
            android:background="#FFA500"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_weight="0.08"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

    </LinearLayout>
</RelativeLayout>
