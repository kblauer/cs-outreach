<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ajeyadav.cstutorialapplication" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cs_tutorial_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="Login" >
        </activity>
        <activity
            android:name=".SignupActivity"
            android:label="Sign Up"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".MyCoursesActivity"
            android:label="My Courses"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CourseCatalogActivity"
            android:label="Course Catalog"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".VideosActivity"
            android:label="Videos"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="edu.ttu.cs.csta.quiz.intro.QuizIntroActivity"
            android:label="Quiz"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".GamesActivity"
            android:label="Games"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="edu.ttu.cs.csta.quiz.category.QuizCategoryMenuActivity"
            android:label="@string/title_activity_quiz_menu"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="edu.ttu.cs.csta.quiz.menu.QuizMenuActivity"
            android:label="@string/title_activity_quiz_menu"
            android:parentActivityName="edu.ttu.cs.csta.quiz.category.QuizCategoryMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.ttu.cs.csta.quiz.category.QuizCategoryMenuActivity" />
        </activity>
        <activity
            android:name="edu.ttu.cs.csta.quiz.question.QuizQuestionActivity"
            android:label="@string/title_activity_quiz_question"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="edu.ttu.cs.csta.quiz.score.QuizScoreActivity"
            android:label="@string/title_activity_quiz_score"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
